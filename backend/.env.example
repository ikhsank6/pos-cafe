# Environment
APP_ENV=local
APP_DEBUG=true
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/postgres?schema=public"

# JWT
JWT_SECRET=testing
JWT_EXPIRES_IN=15m

# Refresh Token Configuration
REFRESH_TOKEN_ENABLED=true
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRES_IN=7d

# Logging
LOG_LEVEL=debug

# Email Configuration
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_SECURE=false
MAIL_USER=your_mailtrap_user
MAIL_PASSWORD=your_mailtrap_password
MAIL_FROM=noreply@yourapp.com

# Redis Configuration (for Bull Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Frontend URL (for email verification links)
FRONTEND_URL=http://localhost:8080

# Rate Limiting Configuration
# Login: strict limit for brute force protection
THROTTLE_LOGIN_LIMIT=3
THROTTLE_LOGIN_TTL=60000
# Auth: general limit for auth endpoints (register, forgot-password, etc.)
THROTTLE_AUTH_LIMIT=10
THROTTLE_AUTH_TTL=60000

